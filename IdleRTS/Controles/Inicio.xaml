<Page x:Class="IdleRTS.Controles.Inicio"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IdleRTS.Controles"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Inicio">

    <Grid Background="DarkGray">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Novo" Width="100" Height="50" Click="CriarNovoJogo"/>
            <Button Content="Carregar" Width="100" Height="50" Margin="5"/>
            <Button Content="Sair" Width="100" Height="50"/>
        </StackPanel>
    </Grid>
</Page>
